<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".views.PartyInformationFragment">


    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/player_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_photo"
        android:layout_alignStart="@id/profile_photo"
        android:layout_marginLeft="21dp"
        android:text="Jadrdc"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/role_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/profile_photo"
        android:src="@drawable/wolfhead" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_player_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_photo"
        android:layout_marginTop="30dp"
        android:padding="16dp"></android.support.v7.widget.RecyclerView>


</RelativeLayout>